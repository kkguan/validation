{
    "name": "kkgroup/validation",
    "type": "library",
    "license": "Apache-2.0",
    "keywords": [
        "validation",
        "validator",
        "kkgroup",
        "kk"
    ],
    "description": "KK validation library",
    "require": {
        "php": ">=8.0",
        "ext-ctype": "*",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "hyperf/server": "^3.0",
        "hyperf/utils": "^3.0",
        "hyperf/validation": "^3.0",
        "jchook/phpunit-assert-throws": "^1.0",
        "mockery/mockery": "^1.4",
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "KK\\Validation\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "KKTest\\Validation\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "scripts": {
        "test": "phpunit -c phpunit.xml --colors=always"
    }
}
